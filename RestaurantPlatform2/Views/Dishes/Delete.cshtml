@model RestaurantPlatform.Models.Dish
@{
    ViewData["Title"] = "Изтриване на ястие";
}

<h2>Сигурни ли сте, че искате да изтриете това ястие?</h2>

<div>
    <h4>@Model.Name</h4>
    <p>@Model.Description</p>
    <p>Цена: @Model.Price.ToString("C")</p>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Изтрий</button>
        <a asp-action="Index" class="btn btn-secondary">Назад</a>
    </form>
</div>

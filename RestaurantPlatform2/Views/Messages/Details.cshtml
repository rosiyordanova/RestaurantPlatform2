@model RestaurantPlatform.Models.ContactMessage

@{
    ViewData["Title"] = "Детайли на съобщение";
}

<h2>Съобщение от @Model.Name</h2>

<dl class="row">
    <dt class="col-sm-2">Име:</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Имейл:</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Дата:</dt>
    <dd class="col-sm-10">@Model.SentAt.ToString("dd.MM.yyyy HH:mm")</dd>

    <dt class="col-sm-2">Съобщение:</dt>
    <dd class="col-sm-10">@Model.Message</dd>
</dl>

<a asp-action="Index" class="btn btn-secondary">Назад</a>

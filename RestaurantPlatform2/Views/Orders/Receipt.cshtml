@model RestaurantPlatform.Models.Order

@{
    Layout = null;
    var total = Model.Items.Sum(i => i.Dish.Price * i.Quantity);
}

<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="utf-8" />
    <title>Касова бележка</title>
    <style>
        body {
            font-family: monospace, monospace;
            background: #f9f9f9;
            padding: 20px;
        }

        .receipt {
            border: 1px dashed #000;
            background: white;
            padding: 20px;
            width: 320px;
            margin: auto;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        .center {
            text-align: center;
        }

        .line {
            border-top: 1px dashed #000;
            margin: 10px 0;
        }

        .right {
            text-align: right;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        td {
            padding: 2px 0;
        }

        td:last-child {
            text-align: right;
        }

        .total {
            font-weight: bold;
            border-top: 1px dashed #000;
            margin-top: 10px;
            padding-top: 5px;
        }

        @@media print {
            button {
                display: none;
            }

            body {
                background: white;
                margin: 0;
                padding: 0;
            }
        }
    </style>
</head>
<body>
    <div class="receipt">
        <div class="center">
            <strong>КАСОВА БЕЛЕЖКА</strong><br />
            RestaurantPlatform
        </div>

        <div class="line"></div>

        <p><strong>Поръчка №:</strong> @Model.Id</p>
        <p><strong>Дата:</strong> @Model.OrderDate.ToString("dd.MM.yyyy HH:mm")</p>
        <p><strong>Статус:</strong> @Model.Status</p>

        <div class="line"></div>

        <table>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Dish.Name x @item.Quantity</td>
                    <td>@(item.Dish.Price * item.Quantity).ToString("F2") лв.</td>
                </tr>
            }
        </table>

        <p class="right total">Общо: @total.ToString("F2") лв.</p>

        <div class="center mt-2">
            <button onclick="window.print()">🖨️ Отпечатай</button>
        </div>
    </div>
</body>
</html>

